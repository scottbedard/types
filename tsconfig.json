{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@/*": ["*"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": [
    "node_modules",
    "scripts",
  ],
  "include": [
    "rollup.config.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tests/**/*.ts",
  ],
}
